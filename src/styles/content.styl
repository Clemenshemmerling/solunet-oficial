.sectOne
  margin-top 4rem
  display flex
  flex-direction column
  background-color #5B7785
  color #FAFAFA
  font-family Muli

  &-picture
    max-width 400px
    max-height 400px
    overflow hidden
    margin 0 auto
    img
      width 100%

  &-content
    margin  0 1rem

    &-h1
      font-weight normal
      font-size 2rem

    &-p
      font-size 1rem


@media (min-width 768px)
  .sectOne
    display flex
    flex-direction row
    margin-top 5rem

    &-picture
      order 2
      margin 2rem 0 0 0
      overflow hidden
      img
        max-width 100%

    &-content
      order 1
      margin 0 0 0 3rem
      max-width 40rem
      &-h1
        margin-top 1rem
      &-p
        max-width 300px

@media (min-width 1000px)
  .sectOne
    display flex
    flex-direction row
    margin-top 5rem

    &-picture
      order 2
      margin 0 auto
      overflow hidden
      padding  0

      img
        max-width 100%

    &-content
      order 1
      padding-top 2rem
      margin 0 0 0 5rem

@media (min-width 1280px)
  .sectOne
    display flex
    flex-direction row

    &-picture
      order 2
      margin 0 auto
      overflow hidden
      padding 3rem 0 0 10rem
      img
        max-width 100%

    &-content
      order 1
      padding 4rem 2rem 0 0
      margin 0 0 0 5rem
      max-width 25rem
