.secthree
  background-color #ED5A48
  font-family Muli
  color #FAFAFA
  padding 0
  margin-top 1rem

  &-h1
    font-size 1.5rem
    text-align center
    font-weight normal
    margin-bottom 1rem

  &-divtext
    display flex
    justify-content space-between

    &-ul
      margin-left 2rem
      font-size 1rem
      max-width 245px

      li
        margin-bottom 0.5rem

    &-picture
      max-height 70px
      max-width 70px
      overflow hidden
      margin 10rem 1rem 0 0

      img
        width: 100%

@media (min-width 768px)

  .secthree
    margin 1rem 2rem 0 2rem

    &-h1
      font-size 2rem
      text-align left
      margin-left 2rem
      padding-top 1rem

    &-divtext
      display flex
      justify-content space-between

      &-ul
        max-width 500px
        margin-left 3rem

      &-picture
        max-height 400px
        max-width 400px
        overflow hidden
        margin 0 2rem 0 0
        img
          width 100%

@media (min-width 900px)
  .secthree
    margin 1rem 6rem 0 6rem

    &-divtext
      display flex
      justify-content space-between

@media (min-width 1280px)
  .secthree
    margin 1rem 14rem 0 14rem

    &-divtext
      display flex
      justify-content space-between
