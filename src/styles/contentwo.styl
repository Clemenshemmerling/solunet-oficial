.sectTwo
  margin-top 1rem
  display flex
  flex-direction column
  color #FAFAFA
  font-family Muli

  &-divOne
    background-color #B3C15D

    &-h1
      font-size 1.5rem
      font-weight normal
      text-align center
      margin-bottom 1rem

    &-divtext
      &-pict
        overflow hidden
        img
          display none
      &-p
        margin 1rem 1rem

  &-divTwo
    background-color #19BCBC
    margin-top 1rem


    &-h1
      width 100%
      text-align center
      margin-bottom 0.5rem
      font-size 1.5rem
      font-weight normal

    &-divtext
      display flex

      &-ul
        margin 1rem 0 0 2.5rem
        font-size 1rem

        li
          margin-bottom 0.5rem

      &-picture
        overflow hidden

@media (min-width 768px)
  .sectTwo
    display flex

    &-divOne
      margin 0 2rem 0 2rem

      &-h1
        text-align left
        margin 1rem 0 0 2rem
        font-size 2rem

      &-divtext
        display flex
        justify-content space-between

        &-p
          order 1
          max-width 40%
          margin-top 1rem

        &-pict
          overflow hidden
          order 2
          max-height 225px

          img
            display block
            width 100%

    &-divTwo
      margin 1rem 2rem 0 2rem

      &-h1
        text-align left
        margin 1rem 0 0 2rem
        font-size 2rem

      &-divtext
        display flex
        justify-content space-between

        &-ul
          margin-left 6rem
          font-size 1.3rem

        &-picture
          max-height 215px

@media (min-width 950px)
  .sectTwo
    display flex
    flex-direction row
    justify-content center

    &-divOne
      max-height 400px
      max-width 400px
      margin 0 2rem 0 0

      &-h1
        margin-bottom 1rem

      &-divtext
        display flex
        flex-direction column

        &-p
          max-width 100%
          order 2

        &-pict
          max-width 100%
          max-height 180px
          order 1

    &-divTwo
      max-height 400px
      min-width 400px
      margin 0

      &-divtext
        display flex
        flex-direction column
