.sectTwo
  margin-top 1rem
  display flex
  flex-direction column
  color #FAFAFA
  font-family Muli

  &-divOne
    background-color #B3C15D

    &-h1
      font-size 1.5rem
      font-weight normal
      text-align center
      margin-bottom 1rem

    &-divtext
      &-pict
        overflow hidden
        img
          display none
      &-ul
        margin 1rem 1rem 1rem 2rem
        li
          margin-bottom 0.5rem
          
  &-divOne:hover
    background-color grey

  &-divTwo
    background-color #19BCBC
    margin-top 1rem

    &-h1
      width 100%
      text-align center
      margin-bottom 1rem
      font-size 1.5rem
      font-weight normal

    &-divtext
      display flex
      justify-content space-between

      &-ul
        margin 0 0 0 2rem
        font-size 1rem

        li
          margin-bottom 0.5rem

      &-picture
        overflow hidden
        max-width 240px
        min-height 110px
        margin-top 1rem

        img
          width 100%
          
  &-divTwo:hover
      background-color grey
          
  &-hide
    height 0
    transition height .3s ease
    overflow hidden
    &--show
      height 180px
      background-color #899446
      p 
        margin 2rem 2rem 0 1rem
        font-size 1rem
        
  &-hidetwo
    height 0
    transition height .3s ease
    overflow hidden
    &--show
      height 180px
      background-color #178989
      p 
        margin 1rem 2rem 0 1rem
        font-size 0.9rem

@media (min-width 768px)
  .sectTwo
    display flex

    &-divOne
      margin 0 2rem 0 2rem

      &-h1
        text-align left
        margin 1rem 0 0 2rem
        font-size 2rem

      &-divtext
        display flex
        justify-content space-between

        &-ul
          order 1
          max-width 40%
          margin 1rem 0 0 2rem
          li
            margin-bottom 0.5rem

        &-pict
          overflow hidden
          order 2
          max-height 220px
          max-width: 360px

          img
            display block
            width 100% 

    &-divTwo
      margin 1rem 2rem 0 2rem

      &-h1
        text-align left
        margin 1rem 0 0 2rem
        font-size 2rem

      &-divtext
        display flex
        justify-content space-between

        &-ul
          margin 1rem 0 0 4rem
          font-size 1.3rem
          li
            margin-bottom 1rem

        &-picture
          max-height 220px
          max-width  360px
          
    &-hide
      &--show
        margin 0 2rem 0 2rem
        height 100px
      
    &-hidetwo
      &--show
        margin 0 2rem 0 2rem
        height 100px
        font-size 1rem

         

     

