.sectionfour
  margin-top 1rem
  font-family Muli
  background-color #F1CD16

  &-picture
    display none

  &-form
    display flex
    flex-direction column
    padding 1rem

    &-input
      border-radius 15px
      font-size 1.5rem
      margin-bottom 5px
      border none

    &-textarea
      border-radius 15px
      font-size 1.5rem
      margin-bottom 5px
      border none
      min-height 10rem

    &-button
      color #FAFAFA
      background-color #3A3A3C
      border none
      border-radius 8px
      max-width 6rem
      min-height 2.5rem
      margin-left auto

@media (min-width 768px)
  .sectionfour
    margin 1rem 2rem
    display flex

    &-picture
      display block
      max-height 400px
      min-width 105px
      overflow hidden
      background-color #5B7785
      img
        margin-top 4rem
        max-width 100%

    &-form
      margin: 0 auto
      min-width 25rem

@media (min-width 960px)
  .sectionfour
    margin 1rem 6rem

@media (min-width 1000px)
  .sectionfour
    margin 1rem 6rem
    &-form
      margin 0 auto
      min-width 400px

@media (min-width 1280px)
  .sectionfour
    margin 0 14rem 1rem 12rem

@media (min-width 1440px)
  .sectionfour
    margin 0 14rem 1rem 13rem
